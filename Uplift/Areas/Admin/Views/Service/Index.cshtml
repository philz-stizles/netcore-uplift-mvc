@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="card mt-5">
        <div class="card-body p-4">
            <div class="row">
                <div class="col-6"><h4 class="">Service List</h4></div>
                <div class="col-6 d-flex flex-column justify-content-center align-items-end">
                    <a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Service" asp-action="Upsert"><i class="fa fa-plus"></i> &nbsp; Create New</a>
                </div>
            </div>
            <br />
            <table id="serviceTable" class="table table-striped table-bordered" style="width: 100%">
                <thead>
                    <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">Frequency</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/service.js"></script>
}
