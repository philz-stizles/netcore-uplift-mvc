@model Uplift.Models.ViewModels.CartSummaryViewModel
@using Microsoft.AspNetCore.Hosting
@{
    ViewData["Title"] = "Home page";
    var totalAmount = 0.0;
}

<form asp-action="">
    <div class="card">
        <div class="card-header container bg-dark">
            <div class="row">
                <div class="col-12 d-none d-md-block col-md-6 text-white"><i class="fas fa-shopping-cart"></i> &nbsp; Shopping Cart</div>
                <div class="col-12 offset-md-2 col-md-4 text-right">
                    <a asp-action="Index" class="btn btn-outline-secondary form-control">Continue Shopping</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h4>Create a new account.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CustomerDetails.Name"></label>
                        <input asp-for="CustomerDetails.Name" class="form-control form-control-sm" />
                        <span asp-validation-for="CustomerDetails.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerDetails.Phone"></label>
                        <input asp-for="CustomerDetails.Phone" class="form-control form-control-sm" />
                        <span asp-validation-for="CustomerDetails.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerDetails.Email"></label>
                        <input asp-for="CustomerDetails.Email" class="form-control form-control-sm" />
                        <span asp-validation-for="CustomerDetails.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CustomerDetails.Address"></label>
                        <input asp-for="CustomerDetails.Address" class="form-control form-control-sm" />
                        <span asp-validation-for="CustomerDetails.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                        <div class="col">
                            <label asp-for="CustomerDetails.City"></label>
                            <input asp-for="CustomerDetails.City" class="form-control form-control-sm" />
                            <span asp-validation-for="CustomerDetails.City" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="CustomerDetails.State"></label>
                            <input asp-for="CustomerDetails.State" class="form-control form-control-sm" />
                            <span asp-validation-for="CustomerDetails.State" class="text-danger"></span>
                        </div>
                    </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Register</button>
                </div>

                <div class="col">
                    @if (Model.Services.Count() > 0)
                    {
                        totalAmount = Model.Services.Sum(s => s.Price);

                        <ul class="list-group list-group-flush">
                            @foreach (var service in Model.Services)
                            {
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col-12 col-md-5">
                                            <h5><strong>@service.Name</strong></h5>
                                            <h5><small>$@service.Price per Service</small></h5>
                                            <h5 class="text-secondary"><small>@service.Frequency.Name</small></h5>
                                        </div>
                                        <div class="col-12 col-md-5">
                                            <div class="row">
                                                <div class="col-6 text-md-right">
                                                    <p class="card-text text-primary">$@service.Price</p>
                                                </div>
                                                <div class="col-6 text-md-right">
                                                    <a asp-action="RemoveFromCart" asp-route-cartItemId="@service.Id" class="btn btn-primary text-white"><i class="far fa-trash-alt"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>  
                    }
                    else
                    {
                        <div class="container">
                            <div class="row justify-content-center">
                                <h4>No items in cart</h4>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <hr />
            <div class="container">
                <div class="row justify-content-end">
                    <h5 class="text-success">Total (USD): &nbsp; @totalAmount</h5>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <a asp-action="Summary" class="btn btn-success">Summary</a>
        </div>
    </div>
</form>
